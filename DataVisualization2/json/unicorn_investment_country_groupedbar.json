{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": "Distribution of Investment by Country",
    "fontSize": 14,
    "font": "Verdana"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/hxooi/FIT3179/main/DataVisualization2/data/investor_country_summary.csv",
    "format": {"type": "csv"}
  },
  "width": 650,
  "height": 420,
  "transform": [
    {
      "aggregate": [{"op": "sum", "field": "Count", "as": "Count"}],
      "groupby": ["Investor", "Country"]
    },
    {
      "joinaggregate": [{"op": "sum", "field": "Count", "as": "InvestorTotal"}],
      "groupby": ["Investor"]
    },
    {"calculate": "datum.Count / datum.InvestorTotal * 100", "as": "Percentage"}
  ],
  "mark": {"type": "bar", "cursor": "pointer"},
  "params": [
    {
      "name": "country_highlight",
      "select": {"type": "point", "fields": ["Country"]},
      "bind": "legend"
    },
    {"name": "hover", "select": {"type": "point", "on": "mouseover"}}
  ],
  "encoding": {
    "x": {
      "field": "Investor",
      "type": "nominal",
      "title": "Investor",
      "sort": {"op": "sum", "field": "Count", "order": "descending"},
      "axis": {
        "labelAngle": -35,
        "labelAlign": "right",
        "labelFontSize": 10,
        "labelLimit": 140,
        "labelExpr": "replace(replace(replace(datum.value, ' Capital', '\\nCapital'), ' Ventures', '\\nVentures'), ' Management', '\\nManagement')"
      },
      "scale": {"paddingInner": 0.06, "paddingOuter": 0.02}
    },
    "xOffset": {
      "field": "Country",
      "scale": {"paddingInner": 0, "paddingOuter": 0.02, "band": 0.95}
    },
    "y": {
      "field": "Count",
      "type": "quantitative",
      "title": "Number of Companies"
    },
    "color": {
      "field": "Country",
      "type": "nominal",
      "scale": {
        "domain": [
          "China",
          "United Kingdom",
          "Canada",
          "United States",
          "Other"
        ],
        "range": ["#FFB085", "#005A8D", "#91C483", "#C689C6", "#556FB5"]
      },
      "legend": {"title": "Country"}
    },
    "opacity": {
      "condition": {"param": "country_highlight", "value": 1},
      "value": 0.7
    },
    "stroke": {
      "condition": {"param": "hover", "empty": false, "value": "black"},
      "value": null
    },
    "strokeWidth": {
      "condition": {"param": "hover", "empty": false, "value": 2},
      "value": 0
    },
    "order": {"field": "Country"},
    "tooltip": [
      {"field": "Investor", "type": "nominal", "title": "Investor"},
      {"field": "Country", "type": "nominal", "title": "Country"},
      {
        "field": "Count",
        "type": "quantitative",
        "title": "Number of Companies"
      },
      {
        "field": "Percentage",
        "type": "quantitative",
        "title": "Share within Investor (%)",
        "format": ".1f"
      }
    ]
  },
