{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "title": {
    "text": "Distribution of Unicorn Company Valuations by Industry",
    "fontSize": 14,
    "font": "Times New Roman"
  },
  "width": 600,
  "height": 600,
  "padding": 5,

  "signals": [
    { "name": "method", "value": "squarify" },
    { "name": "ratio", "value": 1.6108 }
  ],

  "data": [
    {
      "name": "gapminder",
      "url": "https://raw.githubusercontent.com/hxooi/FIT3179/main/DataVisualization2/data/unicorn_industry_treemap.csv",
      "format": { "type": "csv" },
      "transform": [
        { "type": "nest", "keys": ["Industry", "Company"] },
        {
          "type": "treemap",
          "field": "Valuation ($B)",
          "method": { "signal": "method" },
          "ratio": { "signal": "ratio" },
          "paddingInner": 1,
          "size": [{ "signal": "width" }, { "signal": "height" }]
        }
      ]
    },
    {
      "name": "nodes",
      "source": "gapminder",
      "transform": [{ "type": "filter", "expr": "datum.children" }]
    },
    {
      "name": "leaves",
      "source": "gapminder",
      "transform": [{ "type": "filter", "expr": "!datum.children" }]
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": { "data": "gapminder", "field": "Industry" },
      "range": [
        "#357C3C", "#85C88A", "#E5CB9F", "#FFCCB3", "#FFAB76",
        "#FE7E6D", "#FFD372", "#C689C6", "#AC66CC", "#A799B7",
        "#B7657B", "#93ABD3", "#7692E4", "#3F52E3", "#2541B2"
      ]
    }
  ],

  "marks": [
    {
      "type": "rect",
      "from": { "data": "gapminder" },
      "encode": {
        "update": {
          "fill": { "scale": "color", "field": "Industry", "opacity": 0.7 },
          "x": { "field": "x0" },
          "x2": { "field": "x1" },
          "y": { "field": "y0" },
          "y2": { "field": "y1" },
          "fillOpacity": { "value": 0.8 }
        }
      }
    },
    {
      "type": "rect",
      "from": { "data": "leaves" },
      "encode": {
        "enter": {
          "stroke": { "value": "#fff" },
          "strokeWidth": { "value": 0.2 }
        },
        "update": {
          "x": { "field": "x0" },
          "y": { "field": "y0" },
          "x2": { "field": "x1" },
          "y2": { "field": "y1" },
          "fill": { "value": "transparent" },
          "tooltip": {
            "signal": "{\"Industry\": datum.Industry, \"Company\": datum.Company, \"Valuation ($B)\": datum['Valuation ($B)']}"
          }
        },
        "hover": {
          "fill": { "scale": "color", "field": "Industry", "fillOpacity": 1 }
        }
      }
    },
    {
      "type": "text",
      "from": { "data": "gapminder" },
      "interactive": false,
      "encode": {
        "enter": {
          "font": { "value": "Times New Roman" },
          "fontSize": { "value": 12 },
          "fontWeight": { "value": "bold" },
          "align": { "value": "center" },
          "baseline": { "value": "middle" },
          "fill": { "value": "#000" },
          "text": { "field": "Company" },
          "fillOpacity": [
            {
              "test": "datum['Company'] == 'ByteDance' || datum['Company'] == 'SHEIN' || datum['Company'] == 'Canva' || datum['Company'] == 'SpaceX' || datum['Valuation ($B)'] > 140",
              "value": 1
            },
            { "value": 0 }
          ]
        },
        "update": {
          "x": { "signal": "0.5 * (datum.x0 + datum.x1)" },
          "y": { "signal": "0.5 * (datum.y0 + datum.y1)" }
        }
      }
    }
  ],

  "config": {
    "view": { "stroke": null },
    "background": null,
    "title": { "font": "Times New Roman" },
    "axis": { "labelFont": "Times New Roman", "titleFont": "Times New Roman" },
    "legend": { "labelFont": "Times New Roman", "titleFont": "Times New Roman" },
    "text": { "font": "Times New Roman" }
  }
}
